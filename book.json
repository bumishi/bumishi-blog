{
  "title": "Gibook Use",
  "description": "记录Gitbook的配置和一些插件的使用",
  "author": "zhangjikai",
  "language": "zh-hans",
  "gitbook": "3.2.2",
  "links": {
    "sidebar": {
      "Home": "http://bumishi.cn"
    }
  },
  "plugins": [
    "-highlight",
    "-search",
    "-lunr",
    "-livereload",
    "splitter"
  ],
  "pluginsConfig": {
    "sharing": {
      "weibo": true,
      "facebook": true,
      "twitter": true,
      "google": false,
      "instapaper": false,
      "vk": false,
      "all": [
        "facebook",
        "google",
        "twitter",
        "weibo",
        "instapaper"
      ]
    }
  }
}